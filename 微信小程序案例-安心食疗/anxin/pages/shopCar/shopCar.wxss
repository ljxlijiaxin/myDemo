/* pages/shopCar/shopCar.wxss */
/* 购物车 */
page{
  background-color: #f1f1f1;
}

/* 购物车中的商品列表 */
.list{
  margin-bottom: 120rpx;
}
.item{
  background-color: #ffffff;
  display: flex;
  margin-bottom: 20rpx;
}
.cont{
  width: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx;
  position: relative;
  margin-left: -180rpx;
  transform: translateX(180rpx);
  transition: all 0.4s;
}
.cont-icon{
  margin-right: 10rpx;
}
.cont-img{
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.cont-img image{
  width: 180rpx;
  height: 180rpx;
}
.cont-info{
  position: relative;
  height: 180rpx;
}
.info-title{
  font-size: 32rpx;
  color: #1a1a1a;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}
.info-desc{
  font-size: 28rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.info-price{
  position: absolute;
  bottom: 0;
  left: 0;
  color: red;
  font-size: 26rpx;
}
.cont-num-update{
  position: absolute;
  bottom: 15rpx;
  right: 50rpx;
  display: flex;
}
.sub{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: 1rpx solid #999999;
  text-align: center;
}
.num{
  width: 80rpx;
  text-align: center;
}
.add{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #333333;
  color: #ffffff;
}
.del{
  background-color: red;
  color: #ffffff;
  height: 220rpx;
  line-height: 220rpx;
  text-align: center;
  width: 180rpx;
  transform: translateX(180rpx);
  transition: all 0.4s;
}
.touch-move-active .cont,.touch-move-active .del{
  transform: translateX(0);
}

/* 购物车底部按钮栏 */
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  height: 100rpx;
  border-top: 1rpx solid #f1f1f1;
  display: flex;
  align-items: center;
  font-size: 32rpx;
}
.allselected{
  margin-left: 20rpx;
  height: 46rpx;
  line-height: 46rpx;
}
.allselected text{
  vertical-align: super;
}
.price{
  flex: 1;
  text-align: right;
}
.price-sum{
  color: #43bf92;
  margin: 0 10rpx;
}
.price-small{
  color: #999999;
  font-size: 24rpx;
}
.buy{
  margin-left: 10rpx;
  padding: 0 20rpx;
  color: #ffffff;
  background-color: #999999;
  height: 100rpx;
  line-height: 100rpx;
}
.buy-highlight{
  background-color: #43bf92;
}